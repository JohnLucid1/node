<form id="news-selector">
    <div>
        <label for="count">Ammount</label>
        <input name="count" type="number" value="1" min="1" max="10">
    </div>

    <div>
        <label for="category">News Category </label>
        <select name="category" id="pet-select">
            <option value="business">Бизнес</option>
            <option value="economics">Экономика</option>
            <option value="finance/banks">Финансы - Банки</option>
        </select>
    </div>
    <button type="submit">Отправить</button>
</form>

<script>
    const selector = document.getElementById("news-selector");
    selector.addEventListener("submit", (e) => {
        e.preventDefault();
        const count = selector.querySelector('[name="count"]'),
            category = selector.querySelector('[name="category"]');
        window.location.pathname = `./${count.value}/news/for/${category.value}`;
    });
</script>